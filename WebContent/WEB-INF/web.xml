<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>TitleSearch</servlet-name>
        <servlet-class>zad1.servlet.SearchByTitleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TitleSearch</servlet-name>
        <url-pattern>/search/title</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AuthorSearch</servlet-name>
        <servlet-class>zad1.servlet.SearchByAuthorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthorSearch</servlet-name>
        <url-pattern>/search/author</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>YearSearch</servlet-name>
        <servlet-class>zad1.servlet.SearchByYearServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>YearSearch</servlet-name>
        <url-pattern>/search/year</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AllBooks</servlet-name>
        <servlet-class>zad1.servlet.ListAllBooksServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllBooks</servlet-name>
        <url-pattern>/books</url-pattern>
    </servlet-mapping>
</web-app>